<div class="container mx-auto px-4 flex flex-col justify-center items-center">
    <div class="py-4 px-4 w-2/3">
        {{#each gigs}}
           <div>
               <p class="font-bold text-xl py-2">{{title}}</p>
               <span class="font-italic text-grey-500">Est budget MKW{{budget}}</span>
               <p class="text-md py-2">{{{truncate description 250}}}</p>
               <div>
                   {{#each technologies as |tech|}}
                    <span class="mt-4 inline-block">
                        <a href="" class="bg-gray-300 rounded-full drop-shadow-lg px-4 py-2">{{tech}}</a>
                    </span>
                   {{/each}}
               </div>
           </div>
        {{else}}
        <div class="text-center">No gigs available</div>
        {{/each}}
    </div>
   
    {{> addbtn}}
</div>